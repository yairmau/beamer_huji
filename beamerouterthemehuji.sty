%%%%%%%%% Footline %%%%%%%%%
\newcommand{\wid}{0.88*\the\paperwidth}
\newcommand{\hei}{2.5ex}

\defbeamertemplate*{footline}{my footline}
{
    \ifnum \insertpagenumber=1
      % do nothing
    \else
      \leavevmode%
      \begin{beamercolorbox}[wd=\paperwidth,ht=0.0cm,dp=0.0cm,sep=0.3cm,left]{title in head/foot}%
      \begin{tikzpicture}
      \fill[bottombarcolor] (0,0) rectangle(\wid,2*\hei);
      \node[anchor=west, black,font=\scriptsize] at (0,\hei){\textbf{\quad \insertauthor}\quad \displaydate{presentationdate}};%
      \node[anchor=east, black,font=\scriptsize] at (0.96*\wid,\hei){Slide \insertframenumber/\inserttotalframenumber};%
      \filldraw[color=white,fill=white, thick] (\wid,\hei) -- ++(0ex,\hei) -- ++(-\hei,0ex) -- cycle;
      \end{tikzpicture}
      \hfill%
      \includegraphics[height=9ex]{hujilogo}
      \end{beamercolorbox}
      \vskip0pt%
    \fi
}

%%%%%%%%% Headline %%%%%%%%%
\defbeamertemplate*{headline}{miniframes theme}
{%
    \ifnum \insertpagenumber=1
      \leavevmode%
      \hbox{%
      \begin{beamercolorbox}[wd=\paperwidth,ht=2.25ex,dp=1ex,center]{}%
        % empty environment to raise height
      \end{beamercolorbox}}%
      \vskip0pt%
    \else
      \leavevmode%
      \begin{beamercolorbox}[]{upper separation line head}
      \end{beamercolorbox}
      \begin{beamercolorbox}[wd=\paperwidth, sep=0.3cm,leftskip=0.0\paperwidth]{section in head/foot}
      \begin{tikzpicture}
      \fill[bottombarcolor] (0,0) rectangle(0.95*\the\paperwidth,2*\hei);
      \node[anchor=west, black,font=\scriptsize] at (0,\hei){
        \tiny\insertnavigation{0.95\paperwidth}
      };
      \end{tikzpicture}
      \vskip5pt
      \end{beamercolorbox}%

      \begin{beamercolorbox}[colsep=1.5pt]{lower separation line head}
      \vskip5pt
      \end{beamercolorbox}
    \fi
}

\mode<all>